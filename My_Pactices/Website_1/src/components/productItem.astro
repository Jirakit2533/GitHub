---
const { name, image, price } = Astro.props
---

<figure>
    <div>
        <span>{price}</span>
        <img src={image} alt={name} />
    </div>
    <figcaption>{name}</figcaption>
</figure>

<style>
    figure {
        margin: 0;
        width: 300px;
        background-color: white;
        color: black;

    }
    figcaption {
        font-weight: bold;
        text-align: center;
        padding: 1em;
    }
    .product-container {
        position: relative;
        width: 300px;
    }
    .product-container span {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgb(red);
        color: white;
        padding: 0.5em;
        border-radius: 4px;
    }
</style>